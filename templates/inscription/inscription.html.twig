<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>INSCRIPTION</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %} {{ importmap('app') }} {% endblock %}
    {% endblock %}
</head>
<body>
    <div class="container">
        {% include './partiel/flash.html.twig' %}
    </div>
    <div class="container">
        <h3>INSCRIPTION ADMIN</h3>
        <form method="post">
            <div class="form-floating">
                <input type="text" name="username" id="username" class="form-control" placeholder="Username" holder>
                <label for="username">Username</label>
            </div>
            <div class="form-floating">
                <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                <label for="email">email</label>
            </div>
            <div class="form-floating">
                <input type="password" name="password" id="pass" class="form-control" placeholder="Password">
                <label for="pass">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" name="confirm" id="conf" class="form-control" placeholder="Confirm">
                <label for="conf">Confirm</label>
            </div>
            <div>
                <input type="submit" value="Enregistrer" class="btn btn-success" name="submit">
            </div>
        </form>
    </div>
</body>
</html>
